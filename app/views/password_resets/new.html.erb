<h1>Forgot your password?</h1>

<%= form_with url: password_reset_path do |form|%>
  <div class="mb-3">
    <%= form.label :email%>
    <%= form.email_field :email, class: "form-control", placeholder: "Enter your password, please" %>
  </div>
  <div class="mb-3">
    <%= form.submit "Reset Password", class: "btn btn-primary" %>
  </div>
<% end %>
